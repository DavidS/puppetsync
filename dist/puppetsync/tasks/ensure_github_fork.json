    "github_authtoken": {
      "description": "GitHub API token",
      "type": "String[1]",
      "sensitive": true
    },
    "extra_gem_path": {
      "description": "Additional gem paths to look for ruby gems (e.g., `jira-ruby`)",
      "type": "Optional[Stdlib::Absolutepath]"
    }
  },
